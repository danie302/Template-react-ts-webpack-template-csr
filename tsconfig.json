{
    "compilerOptions": {
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@api/*": ["Api/*"],
            "@utils/*": ["utils/*"],
            "@styles/*": ["styles/*"],
            "@repo/*": ["Repositories/*"],
            "@templates/*": ["templates/*"],
            "@images/*": ["assets/images/*"],
        },
    }
}